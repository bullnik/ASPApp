@model IEnumerable<RequirementSearchResult>

<div class="container text-center p-3 mb-3">
    <div class="row row-cols-2">
        <div class="col">Skills</div>
        <div class="col">Knowledges</div>
    </div>
    <div class="row row-cols-2">
        <div class="col">
            <ul class="list-group p-3">
                @foreach (RequirementSearchResult item in Model)
                {
                    if (item.Type is SkillType.Skill) 
                    {
                        <li class="list-group-item">
                            <input class="form-check-input me-1" type="checkbox" value="" id="firstCheckbox">
                            <label class="form-check-label" for="firstCheckbox">@item.Value</label>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col">
            <ul class="list-group p-3">
                @foreach (RequirementSearchResult item in Model)
                {
                    if (item.Type is SkillType.Knowledge)
                    {
                        <li class="list-group-item">
                            <input class="form-check-input me-1" type="checkbox" value="" id="firstCheckbox">
                            <label class="form-check-label" for="firstCheckbox">@item.Value</label>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>