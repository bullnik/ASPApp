@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-white shadow-sm mx-5">

    <div class="input-group p-3 mb-3">
        <input id="search" type="search" class="form-control rounded" placeholder="Search"
                aria-label="Search" aria-describedby="search-addon"/>
        <button id="dirsearch" type="button" class="btn btn-outline-primary">Search</button>
    </div>

    <div id="spinner_dir_search_res" class="text-center p-3 mb-3" style="display:none">
      <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>

    <div id="dirsearchresults"></div>

    <div id="spinner_req_search_res" class="text-center p-3 mb-3" style="display:none">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <div id="reqsearchresults"></div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dirsearch').click(function (e) {
                e.preventDefault();
                var request = $('#search').val();
                var elems = $('#spinner_dir_search_res');
                for (var i = 0; i < elems.length; i++)elems[i].style.display = 'block';
                $('#dirsearchresults').load('@Url.Action("SearchDirection", "Home")?request=' + request, function () {
                    for (var i = 0; i < elems.length; i++)elems[i].style.display = 'none'; 
                    registerCheckboxHandler();
                });
            });
        });

        function registerCheckboxHandler() {
            $('.jibka').on('change', function () {
                if (!this.checked) {
                    return;
                }
                var request = '';
                var elems = $('#spinner_req_search_res');
                for (var i = 0; i < elems.length; i++)elems[i].style.display = 'block';
                $('#reqsearchresults').load('@Url.Action("SearchRequirement", "Home")?request=' + request, 
                function () {
                    for (var i = 0; i < elems.length; i++)elems[i].style.display = 'none';
                });
            });
        }
    </script>
}
